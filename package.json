{
  "name": "office-mcp",
  "version": "1.0.0",
  "description": "MCP server for Claude to access Microsoft 365 services via Microsoft Graph API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:http": "node server-http.js",
    "start:stdio": "node index.js",
    "auth-server": "node office-auth-server.js",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup-task-scheduler.ps1",
    "test-mode": "USE_TEST_MODE=true node index.js",
    "inspect": "npx @modelcontextprotocol/inspector node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest tests/auth.test.js",
    "test:teams": "jest tests/teams.test.js",
    "test:drive": "jest tests/drive.test.js",
    "test:planner": "jest tests/planner.test.js",
    "test:users": "jest tests/users.test.js",
    "test:notifications": "jest tests/notifications.test.js"
  },
  "keywords": [
    "claude",
    "microsoft",
    "office365",
    "mcp",
    "microsoft-graph",
    "teams",
    "email",
    "calendar"
  ],
  "author": "Office MCP Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/office-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/office-mcp/issues"
  },
  "homepage": "https://github.com/yourusername/office-mcp#readme",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@modelcontextprotocol/inspector": "^0.10.2",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
